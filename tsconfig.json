{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@ngp-lib/*": ["lib/*"],
      "@ngp-data/*": ["lib/data/*"],
      "@pages/*": ["lib/pages/*"],
      "@panels/*": ["lib/panels/*"],
      "@playwrightconfig": ["playwright.config"],
      "@sdconfig": ["saucedemo.config"],
      "@report/*": ["playwright-report/*"]
    },
    "rootDir": "./",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ES2021", "ES2017", "dom"
    ]
  }
}