{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "baseUrl": ".",
    "paths": {
      "@ngp-lib/*": ["lib/*"],
      "@ngp-data/*": ["lib/data/*"],
      "@pages/*": ["lib/pages/*"],
      "@panels/*": ["lib/panels/*"],
      "@playwrightconfig": ["playwright.config"],
      "@sdconfig": ["config/saucedemo.config"],
      "@report/*": ["playwright-report/*"]
    },
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["lib", "tests", "playwright.config.ts"]
}
